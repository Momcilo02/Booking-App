<Window x:Class="BookingApp.WPF.View.Tourist.WelcomeTouristWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.View.Tourist"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="WelcomeTouristWindow" Height="768" Width="1024">
    <Window.Resources>
        <!-- Define custom colors -->
        <Color x:Key="PrimaryColor">#FFFFFF</Color>
        <!-- White -->
        <Color x:Key="SecondaryColor">#0071c2</Color>
        <!-- Medium Blue -->
        <Color x:Key="BackgroundColor">#0071c2</Color>
        <!-- Medium Blue -->
        <Color x:Key="ButtonColor">#FFFFFF</Color>
        <!-- White -->
        <Color x:Key="TextColor">#FFFFFF</Color>
        <!-- White -->
        <Color x:Key="ButtonHighlightColor">#005bb5</Color>
        <!-- Darker Blue -->
        <Color x:Key="ButtonTextColor">#000000</Color>
        <!-- Black -->

        <!-- Define custom brushes using the colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource ButtonColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="ButtonHighlightBrush" Color="{StaticResource ButtonHighlightColor}" />
        <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonTextColor}" />

        <!-- Define custom styles for buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBrush}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonTextBrush}" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHighlightBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Define custom style for Labels -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Define custom style for TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10" />
            <Setter Property="IsTextSearchEnabled" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectedItem" Value="{Binding Path=SelectedTour, Mode=TwoWay}" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RowHeight" Value="30" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>

    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Image Margin="330,0,330,593" Source="/Resources/Images/user.png"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding User.Username,Mode=TwoWay}" Margin="354,137,354,216" TextAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
        <TextBlock TextWrapping="Wrap" Margin="84,260,87,-260" FontWeight="Bold" FontSize="48" TextAlignment="Center" Foreground="{StaticResource TextBrush}"><Run Text="WELCOME TO OUR BOOKING APP"/><LineBreak/><Run/></TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="192,401,192,-401" FontSize="36" TextAlignment="Center" Foreground="{StaticResource TextBrush}"><Run Text="DO YOU WANT TO USE A TUTORIAL TO GET STARTED?"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="No" Content="No" Command="{Binding NoClick}" Margin="192,576,613,0"  FontSize="20" Height="60" VerticalAlignment="Top" />
        <Button x:Name="Yes" Content="Yes" Command="{Binding YesClick}" Margin="613,576,192,0"  FontSize="20" Height="60" VerticalAlignment="Top" />

    </Grid>
</Window>
